@model HomeViewModel


<!--Body Section--> 

    <div class="span9">
        <div class="well np">
            <div id="myCarousel" class="carousel slide homCar">
                <div class="carousel-inner">

                    @{foreach(var e in Model.ForCarousel) { 
                            @Html.Partial("HomeCarouselPartial", e)
                      }
                    }

                </div>
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
            </div>
        </div>

        <!--New Products-->

        <div class="well well-small">
            <h3>Новые товары</h3>
            <hr class="soften" />
            <div class="row-fluid">
                <div id="newProductCar" class="carousel slide">
                    <div class="carousel-inner">
                        <div class="item active">
                            <ul class="thumbnails">

                                @{foreach (var e in Model.ForNewProductsBlock.Take(4)){
                                        @Html.Partial("NewProductPartial", e)
                                  }
                                }

                            </ul>
                        </div>
                        <div class="item">
                            <ul class="thumbnails">

                                @{foreach (var e in Model.ForNewProductsBlock.Skip(4)){
                                        @Html.Partial("NewProductPartial", e)
                                  }
                                }

                            </ul>
                        </div>
                    </div>
                    <a class="left carousel-control" href="#newProductCar" data-slide="prev">&lsaquo;</a>
                    <a class="right carousel-control" href="#newProductCar" data-slide="next">&rsaquo;</a>
                </div>
            </div>

            <div class="row-fluid">
                <ul class="thumbnails">

                    @{foreach (var e in Model.ForThumbnailBlock){
                            @Html.Partial("ThumbnailsPartial", e)
                      }
                    }      
                    
                </ul>
            </div>
        </div>

        <!--Featured Products-->

        <div class="well well-small">
            <h3><a class="btn btn-mini pull-right" href="products.html" title="View more">View More<span class="icon-plus"></span></a> Featured Products  </h3>
            <hr class="soften" />
            <div class="row-fluid">
                <ul class="thumbnails">

                    @{foreach (var e in Model.ForFeaturedBlock){
                            @Html.Partial("FeaturedPartial", e)
                      }
                    }

                </ul>
            </div>
        </div>

    </div>