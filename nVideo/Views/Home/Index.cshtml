@model HomeViewModel


<!--Body Section--> 

    <div class="span9">
        <div class="well np">
            <div id="myCarousel" class="carousel slide homCar">
                <div class="carousel-inner">

                    @{foreach(var e in Model.ForCarousel) {
                          @await Html.PartialAsync("HomeCarouselPartial", e)
                      }
                    }

                </div>
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
            </div>
        </div>

        <!--New Products-->

        <div class="well well-small">
            <h3>New Items</h3>
            <hr class="soften" />
            <div class="row-fluid">
                <div id="newProductCar" class="carousel slide">
                    <div class="carousel-inner">
                        <div class="item active">
                            <ul class="thumbnails">

                                @{foreach (var e in Model.ForNewProductsBlock.Take(4)){
                                      @await Html.PartialAsync("NewProductPartial", e)
                                  }
                                }

                            </ul>
                        </div>
                        <div class="item">
                            <ul class="thumbnails">

                                @{foreach (var e in Model.ForNewProductsBlock.Skip(4)){
                                      @await Html.PartialAsync("NewProductPartial", e)
                                  }
                                }

                            </ul>
                        </div>
                    </div>
                    <a class="left carousel-control" href="#newProductCar" data-slide="prev">&lsaquo;</a>
                    <a class="right carousel-control" href="#newProductCar" data-slide="next">&rsaquo;</a>
                </div>
            </div>

            <div class="row-fluid">
                <ul class="thumbnails">

                    @{foreach (var e in Model.ForThumbnailBlock){
                          @await Html.PartialAsync("ThumbnailsPartial", e)
                      }
                    }      
                    
                </ul>
            </div>
        </div>

        <!--Featured Products-->

        <div class="well well-small">
            <hr class="soften" />
            <div class="row-fluid">
                <ul class="thumbnails">

                    @{foreach (var e in Model.ForFeaturedBlock){
                          @await Html.PartialAsync("FeaturedPartial", e)
                      }
                    }

                </ul>
            </div>
        </div>

    </div>