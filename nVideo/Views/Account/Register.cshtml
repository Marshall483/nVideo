@model RegisterModel

<div class="span9 container">

    <form asp-action="Register" asp-controller="Account" class="form-signin" style="margin-left: 130px;">
        <h2 class="form-signin-heading">Please register</h2>

            @Html.ValidationMessage("Uniq_Mail")
            @Html.ValidationMessage("Creator_Error")
            <div class="form-group">
                <label asp-for="Email" , class="sr-only">Email address</label>
                <div>
                    <input asp-for="Email" , type="email" id="regInputEmail" class="form-control" placeholder="Email address" required="" autofocus="">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="sr-only">Password</label>
                <div>
                    <input asp-for="Password" type="password" id="regInputPassword" class="form-control" placeholder="Password" required="">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword" class="sr-only">Password</label>
                <div>
                    <input asp-for="ConfirmPassword" type="password" id="inputConfirmPassword" class="form-control" placeholder="Confirm password" required="">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <hr>

            <button class="btn btn-lg btn-primary btn-block" id="save" type="submit">Register</button>
            <p class="mt-5 mb-3 text-muted">© 2017-@DateTime.Now.Year</p>
    </form>

</div>
