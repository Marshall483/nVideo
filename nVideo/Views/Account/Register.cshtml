@model RegisterModel


<form asp-action="Register" asp-controller="Account" asp-antiforgery="true" id="regForm" method="post" class="form-signin">
    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <img class="mb-4" src="/IMG/LogIcon.jpg" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Registration</h1>

    <div style=" display: inline-block;">
        @Html.ValidationMessage("UniqMailError")
        <div class="form-group">
            <label asp-for="Email" , class="sr-only">Email address</label>
            <div>
                <input asp-for="Email" , type="email" id="regInputEmail" class="form-control" placeholder="Email address" required="" autofocus="">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="sr-only">Password</label>
            <div>
                <input asp-for="Password" type="password" id="regInputPassword" class="form-control" placeholder="Password" required="">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword" class="sr-only">Password</label>
            <div>
                <input asp-for="ConfirmPassword" type="password" id="inputConfirmPassword" class="form-control" placeholder="Confirm password" required="">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <hr>

        <button class="btn btn-lg btn-primary btn-block" id="save" type="submit">Register</button>
        <p class="mt-5 mb-3 text-muted">© 2017-@DateTime.Now.Year</p>
    </div>
</form>

<script src="~/JS/remoteEmailValidation.js" type="text/javascript"></script>
