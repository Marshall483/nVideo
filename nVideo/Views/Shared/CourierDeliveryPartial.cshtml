@model UserProfile

<h2>Where and whom to deliver?</h2>

<form asp-action="ProcessCourierDelivery" asp-controller="Order" method="post">

    <div class="form-group">
        <label asp-for="Name" , class="sr-only">Your Name</label>
        <div>
            <input asp-for="Name" , type="text" class="form-control" placeholder="Your name" required="required">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="City" , class="sr-only">City</label>
        <div>
            <input asp-for="City" , type="text" class="form-control" placeholder="Current city" required="required">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Address" , class="sr-only">Delivery address</label>
        <div>
            <input asp-for="Address" , type="text" class="form-control" placeholder="Street address" required="required">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Phone" , class="sr-only">Phone to contact with you</label>
        <div>
            <input asp-for="Phone" , type="tel" class="form-control" placeholder="Your phone" required="required">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>

    <div>
        <input type="submit" value="Make order">
    </div>

</form>