                    <h1>
                        <a class="logo" asp-controller="Home" asp-action="Index">
                            <img src="~/assets/img/logo-bootstrap-shoping-cart.png" alt="bootstrap sexy shop">
                        </a>
                    </h1>
                </div>
            </div>
        </header>

        <!--
    Navigation Bar Section
    -->
        <div class="navbar">
