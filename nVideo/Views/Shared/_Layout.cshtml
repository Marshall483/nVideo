                            <input type="text" class="span2">
                            <button type="submit" class="btn">Search</button>
                        </form>
                        <ul class="nav pull-right">
                            <li class="dropdown">
                                <a data-toggle="dropdown" class="dropdown-toggle" href="#"><span class="icon-lock"></span> Login <b class="caret"></b></a>
                                <div class="dropdown-menu">

                                    @await Component.InvokeAsync("Login")

                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!--
    Body Section
    -->
        <div class="row">
            <div id="sidebar" class="span3">
                <div class="well well-small">
                    <ul class="nav nav-list">
                        <li><a asp-controller="Catalog" asp-action="CategoryFilter" asp-route-category="Телефоны и гаджеты"><span class="icon-chevron-right"></span>Телефоны и гаджеты</a></li>
                        <li><a asp-controller="Catalog" asp-action="CategoryFilter" asp-route-category="Телевизоры и аудио"><span class="icon-chevron-right"></span>Телевизоры и аудио</a></li>
