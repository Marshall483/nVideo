@model Catalog_Entity

 
<div class="row-fluid">
    <div class="span2">
        <img src="@Model.Images.First().Patch" alt="">
    </div>
    <div class="span6">
        <h5>@Model.Name </h5>
        <p>
            <!--Desk-->
            @String.Concat(Model.Long_Desc.Take(150).Append('.').Append('.').Append('.').ToArray())
        </p>
    </div>
    <div class="span4 alignR">
        <form class="form-horizontal qtyFrm">
            <h3> @Model.Price.ToString("c") </h3>
            <label class="checkbox">
                <input type="checkbox">  Adds product to compair
            </label><br>
            <div class="btn-group">
                <a href="product_details.html" class="defaultBtn"><span class=" icon-shopping-cart"></span> Add to cart</a>
                <a asp-controller="Catalog" asp-action="View" asp-route-id="@Model.Id" class="shopBtn">VIEW</a>
            </div>
        </form>
    </div>
</div>
<hr class="soften">