@model Catalog_Entity

    <li class="span4">
        <div class="thumbnail">
            <a class="zoomTool" asp-controller="Catalog" asp-action="About" asp-route-id="@Model.Id" title="more-info"><span class="icon-search"></span>More Info</a>
            <a asp-controller="Catalog" asp-action="List" asp-route-id="@Model.Id"><img src="@Model.Images.First().Patch" alt="ProdImg"></a>
            <div class="caption">
                <h5>@Model.Name</h5>
                <h4>
                    <a class="defaultBtn" title="Click to view" asp-controller="Catalog" asp-action="About" asp-route-id="@Model.Id"><span class="icon-zoom-in"></span></a>
                    <form asp-controller="Cart" asp-action="AddToCart">
                        <input type="hidden" asp-for="@Model.Id" />
                        <input type="submit" value="AddToCart" class="defaultBtn" <span class=" icon-shopping-cart"></span>
                    </form>
                    <span class="pull-right">@Model.Price.ToString("# руб")</span>
                </h4>
            </div>
        </div>
    </li>