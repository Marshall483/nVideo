@model ChangePasswordViewModel

<div class="row">
    <div class="span6 well well-small">

        <h2>Changing password for @User.Identity.Name</h2>

        <form asp-action="ChangePassword" asp-controller="Office" style="margin-left: 130px;">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="OldPassword" type="password" class="control-label">Old password</label>
                <input type="password" asp-for="OldPassword" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="NewPassword" type="password" class="control-label">New password</label>
                <input type="password" asp-for="NewPassword" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="RepeatNewPassword" type="password" class="control-label">Repeat password</label>
                <input type="password" asp-for="RepeatNewPassword" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>

        </form>

    </div>
</div>