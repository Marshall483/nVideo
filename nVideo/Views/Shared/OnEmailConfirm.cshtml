
<div class="span9">
    <div class="hero-unit">
        @{  
            if (ViewBag.Errors == null)
            {
                <h1>Already done...</h1>
                <p>All that remains, is to confirm your email</p>
                <small>You will be automatic redirect to your profile, if it didn't happen - </small>
                <p>
                    <a class="btn btn-primary btn-large" asp-controller="Office" asp-action="Profile">
                        Push that button
                    </a>
                </p>
            }
            else
            {
                <h1>An error occured while sending mail</h1>
                @foreach (string s in ViewBag.Errors)
                {
                    <p>@s</p>
                }
                <small>You will be automatic redirect to your profile, if it didn't happen - </small>
                <p>
                    <a class="btn btn-primary btn-large" asp-controller="Office" asp-action="Profile">
                        Push that button
                    </a>
                </p>
            }
        }
    </div>
           
</div>

<script type="text/javascript">
    setTimeout(function () {
        window.location.href = "/Profile";
    }, 3000);
</script>