@model Tuple<User, UserProfile>

    <link href="~/CSS/Profile_styles.css" rel="stylesheet" />

    <div class="span9">

        <div class="alert alert-info">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <h4>Information block</h4>
            @{
                if (ViewBag.Messages != null)
                {
                    foreach (string message in ViewBag.Messages)
                    {
                        @message
                    }
                }
                else
                {
                    <small>No messages for you...</small>
                }
            }
        </div>

        <div class="well well-small">
            <!-- MIDDLE-CONTAINER -->
            <div class="media">
                <a class="pull-left" href="#">
                    <img class="media-object img-polaroid" alt="128x128" src="https://avatars.mds.yandex.net/get-zen_doc/1588093/pub_5d5a8f698c5be800ae71f522_5d5a8f789515ee00aecbac45/scale_1200" style="width: 128px; height: 128px;border-color:burlywood; border:3px;">
                </a>
                <div class="media-body">
                    <h4 class="media-heading">Welocme back, @Model.Item1.Email!</h4>
                    <small>Here`s your status!</small>
                    <p>Options: </p>
                    <ul class="nav nav-tabs nav-stacked">
                        <li class="profile-options"><button class="btn btn-primary profile-options">Logout</button></li>
                        <li class="profile-options"><button class="btn btn-danger">Change password</button></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="well well-small">
            <div class="tab-pane fade active in" id="home">
                <h4>Your Information</h4>
                <table class="table table-striped">
                    <tbody>
                        <tr class="techSpecRow"><td class="techSpecTD1">First Name:</td><td class="techSpecTD2">@{if (Model.Item1.Profile.Name != null) @Model.Item1.Profile.Name else
                        { <p>Not Set</p> } }</td></tr>
                        <tr class="techSpecRow"><td class="techSpecTD1">Last Name:</td><td class="techSpecTD2">@{if (Model.Item1.Profile.LastName != null) @Model.Item1.Profile.LastName else
                        { <p>Not Set</p> } }</td></tr>
                        <tr class="techSpecRow"><td class="techSpecTD1">Age:</td><td class="techSpecTD2">@{if (Model.Item1.Profile.Age != null) @Model.Item1.Profile.Age else
                        { <p>Not Set</p> } }</td></tr>
                        <tr class="techSpecRow"><td class="techSpecTD1">Phone:</td><td class="techSpecTD2">@{if (Model.Item1.Profile.Phone != null) @Model.Item1.Profile.Phone else
                        { <p>Not Set</p> } }</td></tr>
                        <tr class="techSpecRow"><td class="techSpecTD1">City:</td><td class="techSpecTD2">@{if (Model.Item1.Profile.City != null) @Model.Item1.Profile.City else
                        { <p>Not Set</p> } }</td></tr>
                        <tr class="techSpecRow"><td class="techSpecTD1">Address:</td><td class="techSpecTD2">@{if (Model.Item1.Profile.Address != null) @Model.Item1.Profile.Address else
                        { <p>Not Set</p> } }</td></tr>
                    </tbody>
                </table>
                <hr>
                <p class="flex-grow-1">You can <a href="#myModal" role="button" class="btn" data-toggle="modal">Edit your profile</a> or <button class="btn btn-danger">Resend Email confirmation message</button></p>
            </div>
        </div> 

        <!-- Modal -->
        <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="myModalLabel">Edit form</h3>
            </div>
            <div class="modal-body">

                <form asp-action="EditProfile" asp-controller="Office" asp-antiforgery="true" id="regForm" method="post" class="form-signin">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <h1 class="h3 mb-3 font-weight-normal">Edit profile</h1>

                    <div style=" display: inline-block;">

                        <div class="form-group">
                            <label asp-for="Item2.Name" , class="sr-only">First name</label>
                            <div>
                                <input asp-for="Item2.Name" , class="form-control" placeholder="First name" required="" autofocus="">
                                <span asp-validation-for="Item2.Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Item2.LastName" , class="sr-only">Last name</label>
                            <div>
                                <input asp-for="Item2.LastName" , class="form-control" placeholder="Last name" required="" autofocus="">
                                <span asp-validation-for="Item2.LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Item2.Age" class="sr-only">Age</label>
                            <div>
                                <input asp-for="Item2.Age" class="form-control" placeholder="Age" required="">
                                <span asp-validation-for="Item2.Age" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Item2.Phone" class="sr-only">Personal phone number</label>
                            <div>
                                <input asp-for="Item2.Phone" id="inputConfirmPassword" class="form-control" placeholder="Personal phone number" required="">
                                <span asp-validation-for="Item2.Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Item2.City" class="sr-only">Your city</label>
                            <div>
                                <input asp-for="Item2.City" id="inputConfirmPassword" class="form-control" placeholder="City" required="">
                                <span asp-validation-for="Item2.City" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Item2.Address" class="sr-only">Delivery address</label>
                            <div>
                                <input asp-for="Item2.Address" id="inputConfirmPassword" class="form-control" placeholder="Address" required="">
                                <span asp-validation-for="Item2.Address" class="text-danger"></span>
                            </div>
                        </div>

                        <hr>
                        <button asp-route-id="@Model.Item1.Id" asp-action="EditProfile" asp-controller="Office" class="btn btn-lg btn-primary btn-block" type="submit">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
