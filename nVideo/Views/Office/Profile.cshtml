@model ProfileModel

    <link href="~/CSS/Profile_styles.css" rel="stylesheet" />

    <div class="span9">

        <div class="well well-small">
            <!-- LEFT-CONTAINER -->
                <div class="weather block clear">
                    <!-- WEATHER (MIDDLE-CONTAINER) -->
                    <h2 class="titular"><span class="icon entypo-location"></span><strong>Welcome back, @User.Identity.Name!</strong></h2>
                    <div class="current-day">
                        <p class="current-day-date">Current date - @DateTime.Now.Day/@DateTime.Now.Month/@DateTime.Now.Year</p>
                    </div>
                </div>
        </div>

        <div class="well well-small">
            <!-- MIDDLE-CONTAINER -->
                <div class="profile block">
                    <!-- PROFILE (MIDDLE-CONTAINER) -->
                    <div class="profile-picture big-profile-picture clear">
                        <img width="150px" alt="Anne Hathaway picture" src="http://upload.wikimedia.org/wikipedia/commons/e/e1/Anne_Hathaway_Face.jpg">
                    </div>
                    <h1 class="user-name">Anne Hathaway</h1>
                </div>
        </div>

        <div class="well well-small">
            <!-- RIGHT-CONTAINER -->
                <div class="join-newsletter block">
                    <!-- JOIN NEWSLETTER (RIGHT-CONTAINER) -->
                    <h2 class="titular">Resend confirmation message</h2>
                    <div class="input-container">
                        <input type="text" id="resend-confirn" placeholder="yourmail@mail.com" class="email text-input">
                        <div class="input-icon envelope-icon-newsletter"><span class="fontawesome-envelope scnd-font-color"></span></div>
                    </div>
                    <a class="subscribe button" style="color: black;" href="#21">Send</a>
            </div>


        </div> <!-- end calendar-month block -->
    </div> <!-- end right-container -->
